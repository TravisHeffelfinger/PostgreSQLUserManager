html
    head
        title Users List
        h1 Currently Stored Users
    body
        a(href='/sort-ascending') sort A-Z
        a(href='/sort-descending') sort Z-A
        form(action="/search-users", method="post")
            input(type='text' name='userSearch')
            button(type="submit") Search
        p= docCount + ' results'
        ul
            each user in users
                li
                    div
                        h5 First Name:
                        span= user.first_name
                    div
                        h5 Last Name:
                        span= user.last_name
                    div
                        h5 Email Address:
                        span= user.email_address
                    div
                        h5 Age:
                        span= user.age
                    div
                        h5 User ID:
                        span= user.user_id
                    div
                        h5 Role:
                        span= user.role
                    div
                        h5 password:
                        span= user.password
                    div
                        form(action='/edit-user', method="post")
                            input(type='hidden', name='edit', value=user.user_id)
                            button(type='submit') Edit
                        form(action='/delete-user', method='post')
                            input(type='hidden', name='delete', value=user.user_id)
                            button(type='submit') Delete